{
  "version": 2,
  "buildCommand": "cd jail-roster-app && npm install && npm run build",
  "outputDirectory": "jail-roster-app/dist",
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "jail-roster-backend/src/main.py": {
      "runtime": "python3.11",
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "jail-roster-backend/src/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "jail-roster-app/dist/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/jail-roster-app/dist/index.html"
    }
  ]
}
